<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:context=".dialogs.ProfilResmiFragment">
    <TextView
            android:text="Galeriden Seç"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvGaleridenFoto" android:textStyle="bold" android:textSize="16sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tvKameradanFoto"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Yeni Fotoğraf Çek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvKameradanFoto" android:textStyle="bold" android:textSize="16sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Seçim Yapınız"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textStyle="bold" android:textSize="16sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tvKameradanFoto" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.085"/>
</android.support.constraint.ConstraintLayout>