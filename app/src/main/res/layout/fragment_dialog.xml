<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".OnayMailTekrarFragment">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etDialogMail"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="mail"
            android:fontFamily="sans-serif-light"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textAlignment="center" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etDialogSifre"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etDialogMail"
            android:inputType="none|textPassword"
            android:hint="sifre"
            android:fontFamily="sans-serif-light"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textAlignment="center"/>
    <Button
            android:text="Gönder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDialogGonder" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/etDialogSifre"/>
    <Button
            android:text="İptal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnDialogIptal"
            app:layout_constraintEnd_toStartOf="@+id/btnDialogGonder" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnDialogGonder"
            app:layout_constraintBottom_toBottomOf="@+id/btnDialogGonder" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>